<% if Registration.deposit_only.empty? %> 
  <em> There are no unpaid registrations </em>
<% else %> 
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Camp</th>
    </tr>
  </thead>
  <tbody>
    <% @unpaid_registrations.each do |registration| %>
      <tr>
        <td> <%= link_to registration.student.name, student_path(registration.student) %> </td>
        <td> <%= registration.camp.curriculum.name%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<span class="paginate">
<%= will_paginate @unpaid_registrations, :previous_label => "Previous&nbsp;", :next_label => "Next&nbsp;"%>
</span>
<% end %>
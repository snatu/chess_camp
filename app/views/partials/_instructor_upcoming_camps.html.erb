<% unless current_user.instructor.camps.upcoming.empty? %>
  <!-- <h3>&nbsp;</h3> -->
  <div class="panel clearfix">
    <h5>Upcoming Camps</h5>
    <ul class="side-nav">
      <% current_user.instructor.camps.upcoming.each do |camp| %>
        <li><%= link_to camp.name, camp_path(camp) %> (<%= camp.start_date.strftime('%m/%d/%y') %>)</li>
      <% end %>
    </ul>
  </div>
<% end %>
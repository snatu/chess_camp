<h3>Student Details</h3>
<strong>Name:&nbsp;&nbsp;</strong>
	<%=@student.proper_name%><br /><br />

<strong>Parent:&nbsp;&nbsp;</strong>
	<%=@student.family.parent_first_name %><br /><br />

<strong>Age:&nbsp;&nbsp;</strong>
	<%=@student.date_of_birth.strftime('%m/%d/%y') %> <br /><br />

<strong>Age:&nbsp;&nbsp;</strong>
	<%=@student.age %> <br /><br />

<strong>Rating:&nbsp;&nbsp;</strong>
	<%=@student.rating%><br /><br />

<strong>Active?&nbsp;&nbsp;</strong>
  <%= @student.active ? "Yes" : "No" %><br /><br />

<%= link_to "Edit this student", edit_student_path(@student), class: "button tiny radius"%>
<%=link_to "Destroy student", student_path(@student), data: {confirm: "Are you sure you want to permanently delete this student from the system?"}, method: :delete, class: "button tiny radius alert"%>
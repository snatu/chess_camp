<%= simple_nested_form_for(@instructor, html: { class: 'form-horizontal' }) do |f| %>
   
   <h3><%= controller.action_name.capitalize %> Instructor</h3>
    
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone, as: :string %>
    <%= f.input :email %>
    <%= f.input :active %>
    <%= f.input :bio, input_html: { rows: 6 } %>

    <div class="span6">
    <legend>Add/Edit User Account</legend>
      <div id="user_account">
        <%= f.simple_fields_for :user_attributes do |user_form| %>
          <%= render :partial => "user_fields", :locals => { :f => user_form } %>
        <% end %> 
      </div> 
    </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of instructors', instructors_path, :class => 'button secondary radius' %>
    </div>

<% end %>
